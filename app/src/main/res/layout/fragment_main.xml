<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <com.santalu.maskedittext.MaskEditText
        android:id="@+id/et_phone_number"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:hint="@string/hint_phone_number"
        android:inputType="phone"


        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/toAccountBtn"
        app:layout_constraintEnd_toEndOf="@+id/toAccountBtn"
        app:layout_constraintStart_toStartOf="@+id/toAccountBtn"
        app:met_mask="+7(###) ###-##-##" />

    <Button
        android:id="@+id/toAccountBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="@string/top_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>